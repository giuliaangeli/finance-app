<div class="h-100 d-flex d-row justify-content-center align-items-center">
  <div class="container">
    <div class="row">
      <div class = "col-8 mt-3 px-3">
        <div class= "mx-5">
          <h1 class = "fw-bolder display-4">Take control of your personal finances</h1> 
          <p class = "text-justify fw-light fs-3">Register your financial inflows and outflows and have a complete analysis of your expenses!</p>
        </div>
      </div><div class = "col-4">
      <div class = "shadow bg-light rounded p-4">
        <p class = "fw-light text-center fs-2"> Forgot your password?</p>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control  my-1", autocomplete: "email" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "btn btn-secondary w-100 my-1"%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>