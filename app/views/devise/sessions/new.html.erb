
<div class="h-100 d-flex d-row justify-content-center align-items-center">
  <div class="container">
    <div class="row">
      <div class = "col-8 mt-3  px-5">
        <div>
          <h1 class = "fw-bolder display-4">Take control of your personal finances</h1> 
          <p class = "text-justify fw-light fs-3">Register your financial inflows and outflows and have a complete analysis of your expenses!</p>
        </div>
        <div  class = "mt-5"> 
          <%= link_to "Sing-up Now", new_registration_path(resource_name), class: "shadow-sm fw-lighter btn btn-light fs-4 w-100" %><br />
        </div>
      </div>

      <div class = "col-4">
        <div class = "shadow bg-light rounded p-4">
          <p class = "fw-light text-center fs-2">Login</p>
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email, class: "fw-light fs-5" %><br />
              <%= f.email_field :email, class: "form-control my-1", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password, class: "fw-light fs-5"  %><br />
              <%= f.password_field :password, class: "form-control  my-1", autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "fw-light fs-6 my-1"%>
              </div>
            <% end %>

            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-secondary w-100 my-1" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>