<div>
  <% if user_signed_in? %>
    <div class="d-flex gap-3">
      <div><%= link_to '<button class = "btn btn-outline-secondary btn-lg p-2 px-3" type="button"><i class="bi bi-eye-fill"></i> ANÁLISES</button>'.html_safe, analytics_path %></div>
      <div><%= link_to '<button class = "btn btn-outline-secondary btn-lg p-2 px-3" type="button"><i class="bi bi-arrow-left-right"></i> ENTRADAS & SAÍDAS</button>'.html_safe, "transactions#index" %></div>
      <div class="ms-auto"><%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-light btn-outline-secondary btn-lg p-2 px-3'%></div>
    </div>
  <% else %>
      <li class="d-flex mb-3">
          <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-outline-secondary btn-lg p-2' %> 
          <%= link_to 'Register', new_user_registration_path, class: 'btn btn-outline-secondary btn-lg p-2' %>
      </li>
  <% end %>
</div>
